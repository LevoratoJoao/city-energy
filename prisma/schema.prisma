generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Device {
  id Int @id @default(autoincrement())
  name String
  description String
  status String @default("Off")
  technicians TechnicianDevice[]
}

model Technician {
  id Int @id @default(autoincrement())
  name String
  devices TechnicianDevice[]
}

model TechnicianDevice {
  id Int @id @default(autoincrement())
  technicianId Int
  technician Technician @relation(fields: [technicianId], references: [id])
  deviceId Int
  device Device @relation(fields: [deviceId], references: [id])
}